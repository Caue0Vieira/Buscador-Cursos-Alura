{
    "name": "caueuanus/buscador-cursos",
    "description": "Projeto que busca os cursos no site da Alura",
    "type": "library",
    "license": "GPL-3.0",
    "bin": ["buscar-cursos.php"],
    "authors": [
        {
            "name": "Caue Vieira",
            "email": "cauevieira056@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^6.4",
        "symfony/dom-crawler": "^4.2",
        "symfony/css-selector": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Alura\\BuscadorDeCursos\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.13",
        "phan/phan": "^5.4"
    },
    "scripts": {
        "test": "phpunit tests",
        "cs": "phpcs --standard=PSR12 src/ tests/",
        "fix": "phpcbf --standard=PSR12 src/ tests/",
        "phan": "phan --allow-polyfill-parser",
        "ls": "dir",
        "limpa-cache": "del cache",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ],
        "post-update-cmd": [
            "@test"
        ]
    }
}
